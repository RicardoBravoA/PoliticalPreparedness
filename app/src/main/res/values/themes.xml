<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PoliticalPreparedness" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccentVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PoliticalPreparedness.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PoliticalPreparedness.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PoliticalPreparedness.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ElectionTitle">
        <item name="android:textSize">@dimen/size_20_sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/size_4</item>
    </style>

    <style name="ElectionItemTitle">
        <item name="android:textSize">@dimen/size_16_sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ElectionItemDescription">
        <item name="android:textSize">@dimen/size_14_sp</item>
    </style>

    <style name="ElectionDetailItem" parent="ElectionItemDescription">
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <style name="ElectionDetailTitle" parent="ElectionItemTitle">
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <style name="InternetMessage">
        <item name="android:textSize">@dimen/size_24_sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="HyperlinkItem" parent="ElectionDetailItem">
        <item name="android:textColorLink">@color/hyperlink</item>
    </style>

    <style name="RepresentativeTitle">
        <item name="android:textSize">@dimen/size_28_sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/plumb</item>
    </style>

    <style name="RepresentativeItemTitle">
        <item name="android:textSize">@dimen/size_24_sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/plumb_item</item>
    </style>

    <style name="RepresentativeItemName">
        <item name="android:textSize">@dimen/size_20_sp</item>
        <item name="android:textColor">@color/plumb_item</item>
    </style>

    <style name="RepresentativeItemDescription" parent="RepresentativeItemName">
        <item name="android:textSize">@dimen/size_18_sp</item>
    </style>

</resources>